<%- include("partials/header"); -%>
<%- include("partials/navbar"); -%>


<section class="vh-100 bg-image"
  style="background-image: url('https://mdbcdn.b-cdn.net/img/Photos/new-templates/search-box/img4.webp');">
  <div class="mask d-flex align-items-center h-100 gradient-custom-3">
    <div class="container h-90">
      <h1 style="text-align: center; color: white;" class="mb-5">Withdraw</h1>
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-9 col-lg-7 col-xl-6">
          <div class="card" style="border-radius: 15px;">
            <div class="card-body p-5" style="text-align: center;">
                <br>
                <h1>Welcome <%- username -%>!</h1>
                    <h2>Account Balance: Rs <b><%- balance -%></b> </h2>

                    <form action="/withdraw" method="post">
                        <div class="mb-3">
                        <label for="amount" class="form-label">Amount</label>
                        <input style="text-align: center;" type="number" required="true" name="amount" style="width: 25%;" id="amount" class="form-control">
                        </div>

                        <button class="btn btn-warning mb-5" type="submit">Withdraw Money</button>
                    </form>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<%- include("partials/footer"); -%>
